<h1>My Employees</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for employee in @my_employees do %>
      <tr>
        <th scope="row"><%= employee.id %></th>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td>
          <%= link_to "Edit", employee_profile_path(employee.id), class:"btn btn-primary" %>
          <a class="btn btn-primary" href="#" role="button">Delete</a>
        </td>
      </tr>
    <% end %>  
  </tbody>
</table>

